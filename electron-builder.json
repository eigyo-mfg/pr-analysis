{
  "appId": "com.github.pr-analysis",
  "asar": true,
  "directories": {
    "output": "release/${version}"
  },
  "files": [
    "dist-electron/**/*",
    "dist/**/*",
    "index.html"
  ],
  "mac": {
    "target": ["dmg"]
  },
  "win": {
    "target": ["nsis"]
  },
  "linux": {
    "target": ["deb"]
  }
}